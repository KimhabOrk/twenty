{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {
        "include": "**/serverless/drivers/layers/**",
        "exclude": "**/serverless/drivers/layers/**/node_modules",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
